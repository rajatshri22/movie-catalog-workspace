{
    "name": "frontend",
    "version": "1.0.0",
    "description": "Frontend for the Movie Catalog application",
    "scripts": {
        "start": "webpack serve --mode development",
        "build": "webpack --mode production",
        "test": "jest",
        "lint": "eslint .",
        "prettify": "prettier --write '**/*.js'"
    },
    "dependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/preset-env": "^7.26.0",
        "babel-loader": "^9.2.1",
        "css-loader": "^7.1.2",
        "eslint": "^7.0.0",
        "file-loader": "^6.2.0",
        "jest": "^27.0.0",
        "prettier": "^2.0.0",
        "style-loader": "^4.0.0",
        "webpack": "^5.97.1",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.0.3"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "browser": true,
            "es2021": true
        },
        "rules": {
            "no-unused-vars": "warn",
            "no-console": "off"
        }
    },
    "jest": {
        "testEnvironment": "jsdom"
    }
}
